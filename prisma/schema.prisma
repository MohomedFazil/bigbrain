generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Grade{
  id Int @id @default(autoincrement())
  name String

  students Student[]
  marks Mark[]
}

model Subject{
  id Int @id @default(autoincrement())
  name String

  marks Mark[]
}

model Paper{
  id Int @id @default(autoincrement())
  name String

  marks Mark[]
}

model Student{
  id Int @id @default(autoincrement())
  name String
  gradeId Int

  // relations
  grade Grade @relation(fields: [gradeId], references: [id])

  marks Mark[]
}

model Mark{
  id Int @id @default(autoincrement())
  gradeId Int
  studentId Int
  subjectId Int
  paperId Int
  score Int?

  // relations
  grades Grade @relation(fields: [gradeId], references: [id])
  students Student @relation(fields: [studentId], references: [id])
  subjects Subject @relation(fields: [subjectId], references: [id])
  papers Paper @relation(fields: [paperId], references: [id])  
}